<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Suitmedia1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Suitmedia1" parent="Base.Theme.Suitmedia1" />

    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/bg_white_rounded</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_white_rounded</item>
    </style>

    <style name="ToolBarFontStyle">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WelcomeFontStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SelectedUserNameFontStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>